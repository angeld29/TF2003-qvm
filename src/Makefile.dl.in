CC=@CC@
RM=@RM@
MKDEP=@MKDEP@
INSTALLDIR=$(PREFIX)/sbin

MODULE=../bin/qwprogs.so

CFLAGS=-g -Wall -O2 -fPIC
LDFLAGS=-shared -Wl,-soname,$(MODULE)
INCFLAGS=-I../include

LIBS=@LIBS@

SOURCES= actions.c admin.c admin_cmd.c buttons.c clan.c client.c combat.c coop.c ctf.c debug.c \
         demoman.c doors.c engineer.c flare.c g_cmd.c g_main.c g_mem.c g_spawn.c g_syscalls.c\
         g_tf_utils.c g_utils.c hook.c items.c mathlib.c menu.c misc.c plats.c player.c\
         pyro.c q_shared.c scout.c sentry.c server.c sniper.c  spectate.c spy.c status.c subs.c\
         tfort.c  tforthlp.c tfortmap.c tforttm.c tg.c triggers.c tsoldier.c version.c\
         vote.c weapons.c world.c bot\ai.c bot\ai-misc.c bot\fighting.c bot\move.c bot\qw.c

OBJECTS=$(SOURCES:.c=.o)


all:		build

depend:
			$(MKDEP) $(INCFLAGS) $(SOURCES)

build:		.depend $(MODULE)

install:	build
			../install-sh -c -m 755 $(MODULE) $(INSTALLDIR)

clean:
			$(RM) -f $(OBJECTS) $(MODULE) *~ .depend

distclean:	clean
			$(RM) -f *.orig *.rej *.tmp Makefile.dl


.c.o:
			$(CC) $(CFLAGS) $(INCFLAGS) -c $<

.depend:	depend

$(MODULE):	$(OBJECTS)
			$(CC) $(LDFLAGS) -o $(MODULE) $(OBJECTS) $(LIBS)
